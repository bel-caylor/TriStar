<div class="table-container">
  <table class="table-base">
    <thead class="table-head">
      <tr>
        <!-- Always visible on all breakpoints -->
        <th class="th-cell">SSN</th>
        <th class="th-cell">Name</th>
        <!-- Hide on small screens (below md) -->
        <th class="th-cell hidden sm:table-cell">Address</th>
        <th class="th-cell hidden md:table-cell">Birth Date</th>
        <th class="th-cell hidden lg:table-cell">Employer</th>
        <th class="th-cell hidden md:table-cell">Term Date</th>
      </tr>
    </thead>
    <tbody class="tbody-base">
      <template x-for="emp in filteredEmployees" :key="emp.ssn">
        <tr class="tr-hover">
          <!-- SSN -->
          <td class="td-cell">
            <span x-text="emp.ssn"></span>
          </td>

          <!-- Name -->
          <td class="td-cell">
            <a href="#" @click.prevent="openEmployee(emp)" class="">
              <span x-text="emp.lastName + ', ' + emp.firstName"></span>
            </a>
          </td>

          <!-- Address -->
          <td class="td-cell hidden sm:table-cell">
            <span x-text="emp.city + ', ' + emp.state + '  ' + emp.zipCode"></span>
          </td>

          <!-- Birth Date -->
          <td class="td-cell hidden md:table-cell">
            <span x-text="formatDate(emp.birthDate)"></span>
          </td>

          <!-- Employer -->
          <td class="td-cell hidden lg:table-cell">
            <span x-text="emp.employer"></span>
          </td>

          <!-- Term Date -->
          <td class="td-cell hidden md:table-cell">
            <span x-text="emp.terminationDate ? formatDate(emp.terminationDate) : 'â€”'"></span>
          </td>
        </tr>
      </template>

      <tr x-show="filteredEmployees.length === 0" class="tr-empty">
        <td colspan="6" class="td-empty">No employees to display.</td>
      </tr>
    </tbody>
  </table>
</div>
