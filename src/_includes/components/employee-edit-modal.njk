<div
  x-show="showModal"
  x-cloak
  class="fixed inset-0 z-50 flex items-start justify-center pt-10 bg-black bg-opacity-50 overflow-y-auto"
  @keydown.escape.window="closeModal()"
  @click.away="closeModal()"
>
  <!-- Modal Card -->
  <div class="bg-white rounded-lg shadow-lg w-full max-w-2xl mx-4" @click.stop>
    <!-- Header -->
    <div class="flex justify-between items-center px-6 py-4 border-b border-gray-200">
      <div class="flex items-center">
        <i class="fas fa-user text-2xl text-gray-700 mr-3"></i>
        <h2 class="text-xl font-semibold text-gray-800 mb-0">Edit Personal Information</h2>
      </div>
      {% include "components/button-close.njk" %}
    </div>

    <!-- Body / Form -->
    <div class="px-6 py-6 space-y-6">
      <!-- Notice Banner -->
      <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4">
        <p class="text-yellow-700 text-sm">
          You know the drill, <span class="text-red-500">*</span> means Required.
        </p>
        <p class="mt-1 text-yellow-800 text-sm">
          Please review the information below. Please ask your HR to make any
          changes in the Chick-fil-A Payroll System.
        </p>
      </div>

      <form @submit.prevent="updateEmployee()" class="space-y-6">
        <!-- Row 1: First Name, MI, Last Name, Suffix -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
          <!-- First Name -->
          <div>
            <label for="firstName" class="block text-sm font-medium text-gray-700">
              First Name <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              id="firstName"
              x-model="selectedEmployee.firstName"
              class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm
                     py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
              placeholder="First name"
            />
          </div>

          <!-- MI -->
          <div>
            <label for="middleInitial" class="block text-sm font-medium text-gray-700">
              MI
            </label>
            <input
              type="text"
              id="middleInitial"
              x-model="selectedEmployee.middleInitial"
              class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm
                     py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
              placeholder="Middle N."
            />
          </div>

          <!-- Last Name -->
          <div>
            <label for="lastName" class="block text-sm font-medium text-gray-700">
              Last Name <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              id="lastName"
              x-model="selectedEmployee.lastName"
              class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm
                     py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
              placeholder="Last name"
            />
          </div>

          <!-- Suffix -->
          <div>
            <label for="suffix" class="block text-sm font-medium text-gray-700">
              Suffix
            </label>
            <input
              type="text"
              id="suffix"
              x-model="selectedEmployee.suffix"
              class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm
                     py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
              placeholder="Suffix"
            />
          </div>
        </div>

        <!-- Row 2: Birth Date & Gender -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 items-end">
          <!-- Birth Date -->
          <div>
            <label for="birthDate" class="block text-sm font-medium text-gray-700">
              Birth Date <span class="text-red-500">*</span>
            </label>
            <div class="mt-1 relative">
              <input
                type="date"
                id="birthDate"
                x-model="selectedEmployee.birthDate"
                class="block w-full border border-gray-300 rounded-md shadow-sm
                       py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
              />
              <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                <i class="fas fa-calendar-alt text-gray-400"></i>
              </div>
            </div>
          </div>

          <!-- Gender -->
          <div class="md:col-span-2">
            <span class="block text-sm font-medium text-gray-700">Gender</span>
            <div class="mt-1 flex items-center space-x-6">
              <label class="inline-flex items-center">
                <input
                  type="radio"
                  name="gender"
                  value="Male"
                  x-model="selectedEmployee.gender"
                  class="text-indigo-600 focus:ring-indigo-500 border-gray-300"
                />
                <span class="ml-2 text-sm text-gray-700">Male</span>
              </label>
              <label class="inline-flex items-center">
                <input
                  type="radio"
                  name="gender"
                  value="Female"
                  x-model="selectedEmployee.gender"
                  class="text-indigo-600 focus:ring-indigo-500 border-gray-300"
                />
                <span class="ml-2 text-sm text-gray-700">Female</span>
              </label>
              <label class="inline-flex items-center">
                <input
                  type="radio"
                  name="gender"
                  value="Unknown"
                  x-model="selectedEmployee.gender"
                  class="text-indigo-600 focus:ring-indigo-500 border-gray-300"
                />
                <span class="ml-2 text-sm text-gray-700">Unknown</span>
              </label>
            </div>
          </div>
        </div>

        <!-- Row 3: Address 1 & Address 2 -->
        <div class="grid grid-cols-1 gap-4">
          <div>
            <label for="address1" class="block text-sm font-medium text-gray-700">
              Address 1 <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              id="address1"
              x-model="selectedEmployee.address1"
              class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm
                     py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
            />
          </div>
          <div>
            <label for="address2" class="block text-sm font-medium text-gray-700">
              Address 2
            </label>
            <input
              type="text"
              id="address2"
              x-model="selectedEmployee.address2"
              class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm
                     py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
            />
          </div>
        </div>

        <!-- Row 4: City, State, Zip Code -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div>
            <label for="city" class="block text-sm font-medium text-gray-700">
              City <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              id="city"
              x-model="selectedEmployee.city"
              class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm
                     py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
            />
          </div>
          <div>
            <label for="state" class="block text-sm font-medium text-gray-700">
              State <span class="text-red-500">*</span>
            </label>
            <select
              id="state"
              x-model="selectedEmployee.state"
              class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm
                     py-2 px-3 bg-white focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
            >
              <option value="">Select state</option>
              <option>MD Maryland</option>
              <option>VA Virginia</option>
              <option>DC District of Columbia</option>
              <!-- …other states… -->
            </select>
          </div>
          <div>
            <label for="zip" class="block text-sm font-medium text-gray-700">
              Zip Code <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              id="zip"
              x-model="selectedEmployee.zipCode"
              class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm
                     py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
            />
          </div>
        </div>

        <!-- Row 5: Phone Number -->
        <div class="grid grid-cols-1 gap-4">
          <div>
            <span class="block text-sm font-medium text-gray-700">Phone Number</span>
            <div class="mt-1 flex space-x-2">
              <input
                type="text"
                x-model="selectedEmployee.phoneArea"
                class="block w-20 border border-gray-300 rounded-md shadow-sm
                       py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
                placeholder="area"
              />
              <input
                type="text"
                x-model="selectedEmployee.phoneLocal"
                class="block w-24 border border-gray-300 rounded-md shadow-sm
                       py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
                placeholder="local"
              />
              <input
                type="text"
                x-model="selectedEmployee.phoneNumber"
                class="block w-32 border border-gray-300 rounded-md shadow-sm
                       py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
                placeholder="number"
              />
            </div>
          </div>
        </div>

        <!-- Row 6: Email -->
        <div class="grid grid-cols-1 gap-4">
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700">
              Email (<span class="text-gray-500">not required</span>), but it would really help us
            </label>
            <input
              type="email"
              id="email"
              x-model="selectedEmployee.email"
              class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm
                     py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
            />
          </div>
        </div>

        <!-- Buttons -->
        <div class="pt-4 flex justify-end space-x-3">
          <button
            type="button"
            class="px-4 py-2 bg-red-500 text-white text-sm font-medium rounded-md hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-400"
            @click="closeModal()"
          >
            Cancel
          </button>
          <button
            type="submit"
            class="px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500"
          >
            Update
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
