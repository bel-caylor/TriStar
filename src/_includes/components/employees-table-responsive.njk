<div class="overflow-x-visible bg-gray-100">
  <table class="responsive-table resp-lg">
    <thead class="hidden lg:table-header-group">
      <tr>
        <th class="th-cell">SSN</th>
        <th class="th-cell">Name</th>
        <th class="th-cell">Address</th>
        <th class="th-cell">Birth Date</th>
        <th class="th-cell">Employer</th>
        <th class="th-cell">Term Date</th>
      </tr>
    </thead>
    <tbody class="tbody-base">
      <template x-for="emp in filteredEmployees" :key="emp.ssn">
        <tr class="max-w-[48%] lg:max-w-none min-w-[250px]">
          <!-- SSN -->
          <td class="td-cell col-start-2 lg:col-start-1 row-start-1 colon-label td-mobile-right" data-label="SSN">
            <span x-text="emp.ssn"></span>
          </td>
          <!-- Name -->
          <td class="td-cell no-label col-start-1 row-start-1 lg:col-start-2" data-label="Name">
            <a href="#" @click.prevent="openEmployee(emp)">
              <span class="text-xl lg:text-sm" x-text="emp.lastName + ', ' + emp.firstName"></span>
            </a>
          </td>
          <!-- Address -->
          <td class="td-cell no-label" data-label="Address">
            <span x-text="emp.address1"></span><br>
            <span x-text="emp.city + ', ' + emp.state + '  ' + emp.zipCode"></span>
          </td>
          <!-- Birth Date -->
          <td class="td-cell td-mobile-right" data-label="Birth Date">
            <span x-text="formatDate(emp.birthDate)"></span>
          </td>
          <!-- Employer -->
          <td class="td-cell" data-label="Employer">
            <span x-text="emp.employer.split(' - ')[0]"></span><br>
            <span x-text="emp.employer.split(' - ').slice(1).join(', ')"></span>
          </td>
          <!-- Term Date -->
          <td class="td-cell td-mobile-right" data-label="Term Date">
            <span x-text="emp.terminationDate ? formatDate(emp.terminationDate) : '—'"></span>
          </td>
        </tr>
      </template>

      <!-- “No Data” fallback row, which also becomes a card on mobile -->
      <tr x-show="filteredEmployees.length === 0" class="tr-empty">
        <td class="td-empty" colspan="6">No employees to display.</td>
      </tr>
    </tbody>
  </table>
</div>
