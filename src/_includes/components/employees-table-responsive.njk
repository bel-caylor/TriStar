<div class="overflow-x-visible bg-gray-100">
  <table class="responsive-table md:bg-white md:rounded-lg md:shadow-md">
    <thead class="">
      <tr>
        <th class="th-cell">SSN</th>
        <th class="th-cell">Name</th>
        <th class="th-cell">Address</th>
        <th class="th-cell">Birth Date</th>
        <th class="th-cell">Employer</th>
        <th class="th-cell">Term Date</th>
      </tr>
    </thead>
    <tbody>
      <template x-for="emp in filteredEmployees" :key="emp.ssn">
        <tr class="tr-hover grid grid-cols-2 grid-rows-3 gap-4 md:table-cell">
          <!-- SSN -->
          <td class="td-cell col-start-2 md:col-start-1 row-start-1 colon-label" data-label="SSN">
            <span x-text="emp.ssn"></span>
          </td>
          <!-- Name -->
          <td class="td-cell no-label col-start-1 row-start-1 md:col-start-2" data-label="Name">
            <a href="#" @click.prevent="openEmployee(emp)" class="text-indigo-600 hover:text-indigo-800">
              <span x-text="emp.name" class="text-2xl md:text-lg"></span>
            </a>
          </td>
          <!-- Address -->
          <td class="td-cell no-label address" data-label="Address">
            <span x-text="emp.address.split(', ')[0]"></span><br>
            <span x-text="emp.address.split(', ').slice(1).join(', ')"></span>
          </td>
          <!-- Birth Date -->
          <td class="td-cell birth text-right md:text-left" data-label="Birth Date">
            <span x-text="formatDate(emp.birthDate)"></span>
          </td>
          <!-- Employer -->
          <td class="td-cell employer" data-label="Employer">
            <span x-text="emp.employer.split(' - ')[0]"></span><br>
            <span x-text="emp.employer.split(' - ').slice(1).join(', ')"></span>
          </td>
          <!-- Term Date -->
          <td class="td-cell term text-right md:text-left" data-label="Term Date">
            <span x-text="emp.terminationDate ? formatDate(emp.terminationDate) : '—'"></span>
          </td>
        </tr>
      </template>

      <!-- “No Data” fallback row, which also becomes a card on mobile -->
      <tr x-show="filteredEmployees.length === 0" class="tr-empty">
        <td class="td-empty" colspan="6">No employees to display.</td>
      </tr>
    </tbody>
  </table>
</div>
