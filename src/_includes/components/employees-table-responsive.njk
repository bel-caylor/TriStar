<div class="lg:hidden space-y-4">
  {# Assuming you loop over `employees` in your context #}
  {% for emp in employees %}
    <div class="grid grid-cols-2 gap-x-4 gap-y-1 p-4 bg-white shadow rounded-lg">
      <div class="font-medium text-gray-400">SSN</div>
      <div>{{ emp.ssn }}</div>

      <div class="font-medium text-gray-400">Name</div>
      <div>
        <a href="#" @click.prevent="openEmployee({{ emp }})"
           class="text-indigo-600 hover:text-indigo-800">
          {{ emp.lastName }}, {{ emp.firstName }}
        </a>
      </div>

      <div class="font-medium text-gray-400">Address</div>
      <div>{{ emp.address1 }}<br>{{ emp.city }}, {{ emp.state }}</div>

      <div class="font-medium text-gray-400">Birth Date</div>
      <div>{{ emp.birthDate }}</div>

      <div class="font-medium text-gray-400">Employer</div>
      <div class="td-mobile-right">{{ emp.employer }}</div>

      <div class="font-medium text-gray-400">Term Date</div>
      <div>{{ emp.terminationDate or "—" }}</div>
    </div>
  {% endfor %}
</div>

{# ------------------------------------------------------- #}
{# DESKTOP (lg and up): use normal <table> (visible at lg+) #}
{# ------------------------------------------------------- #}
<div class="hidden lg:block overflow-x-auto bg-white shadow rounded-lg">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr class="text-left text-xs font-medium text-gray-500 tracking-wider">
        <th class="px-6 py-3">SSN</th>
        <th class="px-6 py-3">Name</th>
        <th class="px-6 py-3">Address</th>
        <th class="px-6 py-3">Birth Date</th>
        <th class="px-6 py-3">Employer</th>
        <th class="px-6 py-3">Term Date</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      {% for emp in employees %}
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4 text-sm text-gray-900 whitespace-nowrap">{{ emp.ssn }}</td>
          <td class="px-6 py-4 text-sm text-gray-900 whitespace-nowrap">
            <a href="#" @click.prevent="openEmployee({{ emp }})"
               class="text-indigo-600 hover:text-indigo-800">
              {{ emp.lastName }}, {{ emp.firstName }}
            </a>
          </td>
          <td class="px-6 py-4 text-sm text-gray-900 whitespace-nowrap">
            {{ emp.address1 }}<br />{{ emp.city }}, {{ emp.state }}
          </td>
          <td class="px-6 py-4 text-sm text-gray-900 whitespace-nowrap">{{ emp.birthDate }}</td>
          <td class="px-6 py-4 text-sm text-gray-900 whitespace-nowrap">{{ emp.employer }}</td>
          <td class="px-6 py-4 text-sm text-gray-900 whitespace-nowrap">{{ emp.terminationDate or "—" }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>