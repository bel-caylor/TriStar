<div 
  x-show="showModal" 
  x-transition.opacity 
  class="fixed inset-0 z-50 overflow-y-auto"
  style="background-color: rgba(0, 0, 0, 0.5);"
  aria-labelledby="familyEditModalLabel" 
  role="dialog" 
  aria-modal="true"
>
  <div class="flex items-center justify-center min-h-screen px-4">
    <div class="bg-white rounded-lg overflow-hidden shadow-xl transform transition-all sm:max-w-lg w-full">
      <div class="px-6 py-4">
        <div class="flex justify-between items-center mb-4">
          <h2 class="text-xl font-semibold text-gray-800" id="familyEditModalLabel" x-text="isEdit ? 'Edit Family Member' : 'Add Family Member'"></h2>
          <button @click="closeModal()" class="text-gray-400 hover:text-gray-600">
            <span class="sr-only">Close</span>
            &times;
          </button>
        </div>

        <form @submit.prevent="saveMember()">
          <div class="grid grid-cols-1 gap-4">
            <div>
              <label for="firstName" class="block text-sm font-medium text-gray-700">First Name</label>
              <input type="text" id="firstName" x-model="editingMember.firstName"
                     class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 
                            focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                     required />
            </div>

            <div>
              <label for="lastName" class="block text-sm font-medium text-gray-700">Last Name</label>
              <input type="text" id="lastName" x-model="editingMember.lastName"
                     class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 
                            focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                     required />
            </div>

            <div>
              <label for="relation" class="block text-sm font-medium text-gray-700">Relation</label>
              <select id="relation" x-model="editingMember.relation"
                      class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 
                             focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                <option value="Child">Child</option>
                <option value="Spouse">Spouse</option>
                <option value="Other">Other</option>
              </select>
            </div>

            <div>
              <label for="birthDate" class="block text-sm font-medium text-gray-700">Birth Date</label>
              <input type="date" id="birthDate" x-model="editingMember.birthDate"
                     class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 
                            focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                     required />
            </div>

            <div class="grid grid-cols-2 gap-4">
              <div>
                <label for="gender" class="block text-sm font-medium text-gray-700">Gender</label>
                <select id="gender" x-model="editingMember.gender"
                        class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 
                               focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                  <option value="Male">Male</option>
                  <option value="Female">Female</option>
                </select>
              </div>
              <div>
                <label for="ssn" class="block text-sm font-medium text-gray-700">SSN</label>
                <input type="text" id="ssn" x-model="editingMember.ssn"
                       class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 
                              focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                       maxlength="9" />
              </div>
            </div>
          </div>

          <div class="mt-6 flex justify-end space-x-2">
            <button type="button" @click="closeModal()"
                    class="px-4 py-2 bg-gray-200 border border-gray-300 rounded-md
                           text-gray-700 hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500">
              Cancel
            </button>
            <button type="submit"
                    class="inline-flex justify-center py-2 px-4 bg-blue-600 text-white text-sm font-medium rounded-md
                           hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
              Save
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
