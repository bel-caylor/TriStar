<section>
  <!-- MOBILE & TABLET (cards) -->
  <div class="cards">
    <!-- loop through familyMembers -->
    <template x-for="member in familyMembers" :key="member.id">
      <div class="card">
        <!-- Name -->
        <div>
          <span class="sr-only">Name</span>
          <a href="#" @click.prevent="openEdit(member)" x-text="`${member.lastName}, ${member.firstName}`"></a>
        </div>

        <div class="field">
          <span class="field-name">SSN</span>
          <span x-text="member.ssn"></span>
        </div>
        
        <div class="field">
          <span class="field-name">Relation</span>
          <span x-text="member.relation"></span>
        </div>

        <div class="field">
          <span class="field-name">Birth Date</span>
          <span x-text="member.birthDate"></span>
        </div>

        <div class="field">
          <span class="field-name">Age</span>
          <span x-text="member.age"></span>
        </div>

        <div class="field">
          <span class="field-name">Gender</span>
          <span x-text="member.gender"></span>
        </div>

        <div class="field">
          <span class="field-name">Disabled</span>
          <span x-text="member.disabled ? 'Yes' : 'No'"></span>
        </div>

        <div class="field">
          <span class="field-name">Verified</span>
          <span x-text="member.verified ? 'Yes' : 'No'"></span>
        </div>

        <div class="field">
          <span class="field-name">Term Date</span>
          <span x-text="member.termDate || '-'"></span>
        </div>
      </div>
    </template>

    <!-- empty state -->
    <div x-show="familyMembers.length === 0" class="cards-empty">
      No family members found.
    </div>
  </div>

<!-- DESKTOP (table) -->
<div class="table-deskop hidden lg:block overflow-x-auto">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>SSN</th>
        <th>Relation</th>
        <th>Birth Date</th>
        <th>Age</th>
        <th>Gender</th>
        <th>Disabled</th>
        <th>Verified</th>
        <th>Term Date</th>
      </tr>
    </thead>
    <tbody>
      <!-- loop through familyMembers -->
      <template x-for="member in familyMembers" :key="member.id">
        <tr>
          <td>
            <a href="#" @click.prevent="openEdit(member)" 
              x-text="`${member.lastName}, ${member.firstName}`">
            </a>
          </td>
          <td x-text="member.ssn"></td>
          <td x-text="member.relation"></td>
          <td x-text="member.birthDate"></td>
          <td x-text="member.age"></td>
          <td x-text="member.gender"></td>
          <td x-text="member.disabled ? 'Yes' : 'No'"></td>
          <td x-text="member.verified ? 'Yes' : 'No'"></td>
          <td x-text="member.termDate || '-'"></td>
        </tr>
      </template>

      <!-- empty-state -->
      <tr x-show="familyMembers.length === 0" ">
        <td colspan="9" class="text-center text-textGray">
          No family members found.
        </td>
      </tr>
    </tbody>
  </table>
</div>

</section>
