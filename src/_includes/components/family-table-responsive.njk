{# src/_includes/components/family-table-responsive.njk #}
<section class="">
  <div class="flex items-center justify-end mb-4">
    <button
      type="button"
      class="inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md
             hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
      @click="openAdd()"
    >
      Add a New Family Member
    </button>
  </div>

  {# ============================================= #}
  {# MOBILE & TABLET (“lg:hidden”): grid cards      #}
  {# ============================================= #}
  
  <div class="lg:hidden space-y-4">
    <!-- Alpine loop: one “card” per family member -->
    <template x-for="member in familyMembers" :key="member.id">
      <div class="grid grid-cols-2 gap-x-4 gap-y-1 p-4 bg-white shadow rounded-lg">
        <!-- Name -->
        <div class="font-medium text-gray-400">Name</div>
        <div>
          <a
            href="#"
            @click.prevent="openEdit(member.id)"
            class="text-indigo-600 hover:text-indigo-800"
          >
            <span x-text="`${member.lastName}, ${member.firstName}`"></span>
          </a>
        </div>

        <!-- SSN -->
        <div class="font-medium text-gray-400">SSN</div>
        <div x-text="member.ssn"></div>

        <!-- Relation -->
        <div class="font-medium text-gray-400">Relation</div>
        <div x-text="member.relation"></div>

        <!-- Birth Date -->
        <div class="font-medium text-gray-400">Birth Date</div>
        <div x-text="member.birthDate"></div>

        <!-- Age -->
        <div class="font-medium text-gray-400">Age</div>
        <div x-text="member.age"></div>

        <!-- Gender -->
        <div class="font-medium text-gray-400">Gender</div>
        <div x-text="member.gender"></div>

        <!-- Disabled -->
        <div class="font-medium text-gray-400">Disabled</div>
        <div x-text="member.disabled ? 'Yes' : 'No'"></div>

        <!-- Verified -->
        <div class="font-medium text-gray-400">Verified</div>
        <div x-text="member.verified ? 'Yes' : 'No'"></div>

        <!-- Term Date -->
        <div class="font-medium text-gray-400">Term Date</div>
        <div x-text="member.termDate || '-'"></div>
      </div>
    </template>

    <!-- Alpine empty‐state: show when no familyMembers -->
    <template x-if="!familyMembers || familyMembers.length === 0">
      <div class="p-4 bg-white shadow rounded-lg text-center text-gray-500">
        No family members found.
      </div>
    </template>
  </div>

  {# ============================================= #}
  {# DESKTOP (“hidden lg:block”): standard table   #}
  {# ============================================= #}
  <div class="hidden lg:block overflow-x-auto bg-gray-100 rounded-lg shadow">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr class="text-left text-xs font-medium text-gray-500 tracking-wider">
          <th class="px-6 py-3">Name</th>
          <th class="px-6 py-3">SSN</th>
          <th class="px-6 py-3">Relation</th>
          <th class="px-6 py-3">Birth Date</th>
          <th class="px-6 py-3">Age</th>
          <th class="px-6 py-3">Gender</th>
          <th class="px-6 py-3">Disabled</th>
          <th class="px-6 py-3">Verified</th>
          <th class="px-6 py-3">Term Date</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <!-- Alpine loop for table rows -->
        <template x-for="member in familyMembers" :key="member.id">
          <tr class="hover:bg-gray-50">
            <!-- Name -->
            <td class="px-6 py-4 text-sm text-gray-900 whitespace-nowrap">
              <a
                href="#"
                @click.prevent="openEdit(member.id)"
                class="text-indigo-600 hover:text-indigo-800"
              >
                <span x-text="`${member.lastName}, ${member.firstName}`"></span>
              </a>
            </td>

            <!-- SSN -->
            <td class="px-6 py-4 text-sm text-gray-900 whitespace-nowrap" x-text="member.ssn"></td>

            <!-- Relation -->
            <td class="px-6 py-4 text-sm text-gray-900 whitespace-nowrap" x-text="member.relation"></td>

            <!-- Birth Date -->
            <td class="px-6 py-4 text-sm text-gray-900 whitespace-nowrap" x-text="member.birthDate"></td>

            <!-- Age -->
            <td class="px-6 py-4 text-sm text-gray-900 whitespace-nowrap" x-text="member.age"></td>

            <!-- Gender -->
            <td class="px-6 py-4 text-sm text-gray-900 whitespace-nowrap" x-text="member.gender"></td>

            <!-- Disabled -->
            <td
              class="px-6 py-4 text-sm text-gray-900 whitespace-nowrap"
              x-text="member.disabled ? 'Yes' : 'No'"
            ></td>

            <!-- Verified -->
            <td
              class="px-6 py-4 text-sm text-gray-900 whitespace-nowrap"
              x-text="member.verified ? 'Yes' : 'No'"
            ></td>

            <!-- Term Date -->
            <td
              class="px-6 py-4 text-sm text-gray-900 whitespace-nowrap"
              x-text="member.termDate || '-'"
            ></td>
          </tr>
        </template>

        <!-- Alpine empty‐state inside table -->
        <template x-if="!familyMembers || familyMembers.length === 0">
          <tr>
            <td colspan="9" class="px-6 py-4 text-sm text-gray-500 text-center">
              No family members found.
            </td>
          </tr>
        </template>
      </tbody>
    </table>
  </div>
</section>
