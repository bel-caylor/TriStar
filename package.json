{
  "name": "tristar",
  "version": "1.0.0",
  "scripts": {
    "dev": "npm-run-all --parallel build:css:watch eleventy:serve",
    "build:css": "postcss ./src/style.css -o ./dist/style.css",
    "build:css:watch": "postcss ./src/style.css -o ./dist/style.css --watch",
    "eleventy:serve": "eleventy --serve",
    "eleventy": "eleventy",
    "eleventy:prod":   "cross-env ELEVENTY_ENV=production eleventy",
    "build": "npm run build:css && npm run eleventy",
    "build:prod":      "npm run build:css && eleventy --pathprefix /TriStar/",
    "prod":            "npm run build:prod"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.0",
    "postcss-cli": "^11.0.1",
    "postcss-easy-import": "^4.0.0",
    "postcss-import": "^16.1.0",
    "postcss-nesting": "^13.0.1",
    "tailwindcss": "^3.4.17"
  },
  "dependencies": {
    "alpinejs": "^3.14.9"
  }
}
